{
  "name": "isaactorresmichel/wp-lets-start",
  "description": "A modern WordPress boilerplate repository. Integrates composer packages, namespacing and a better directory structure.",
  "type": "project",
  "license": "MIT",
  "homepage": "http://crayon.com.mx",
  "authors": [
    {
      "name": "Isaac Torres Michel",
      "email": "isaac@crayon.com.mx"
    }
  ],
  "support": {
    "issues": "https://github.com/CrayonEstudioCreativo/wpstarter/issues"
  },
  "minimum-stability": "stable",
  "require": {
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.4",
    "johnpbloch/wordpress": "^4.8",
    "roots/wp-password-bcrypt": "^1.0",
    "oscarotero/env": "^1.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "composer/composer": "^1.5"
  },
  "extra": {
    "wordpress-install-dir": "public/app"
  },
  "autoload": {
    "psr-4": {
      "isaactorresmichel\\WordPress\\": "src/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "isaactorresmichel\\WordPress\\Utils\\SaltsGenerator::generate",
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "isaactorresmichel\\WordPress\\Utils\\SaltsGenerator::generate"
    ]
  }
}
